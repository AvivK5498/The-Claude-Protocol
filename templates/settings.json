{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/task-pre-use.cjs"}
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/enforce-branch-before-edit.cjs"}
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/enforce-branch-before-edit.cjs"}
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/bash-guard.cjs"}
        ]
      },
      {
        "matcher": "NotebookEdit",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/block-notebook-edit.cjs"}
        ]
      },
      {
        "matcher": "mcp__provider_delegator__invoke_agent",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/validate-provider-agent.cjs"}
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/task-post-use.cjs", "timeout": 10}
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/memory-capture.cjs", "timeout": 10}
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/validate-completion.cjs"}
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/session-start.cjs"}
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/clarify-vague-request.cjs"}
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/nudge-claude-md-update.cjs"}
        ]
      }
    ]
  }
}
